<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>

<%= form_with model: Book.new do |f| %>
<table>
  <tr>
    <th><h2>New Book</h2></th>
  </tr>
  <tr>
    <td>Title<br>
    <%= f.text_field :title %></td>
  </tr>
  <tr>
    <td>Body<br>
    <%= f.text_area :body %></td>
  </tr>
  <tr>
    <td><%= f.submit "Create Book" %></td>
  </tr>
</table>
<% end %>