<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>

<%= form_with model: Book.new do |f| %>
  <table>
    <tr>
      <th><h2>New Book</h2></th>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </tr>
    <tr>
      <td>Title<br>
      <%= f.text_field :title %></td>
    </tr>
    <tr>
      <td>Body<br>
      <%= f.text_area :body %></td>
    </tr>
    <tr>
      <td><%= f.submit "Create Book" %></td>
    </tr>
  </table>
<% end %>