<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <p class="label">
    <strong>Title</strong><br>
    <%= f.text_field :title %>
  </p>
  
  <p class="label">
    <strong>Body</strong><br>
    <%= f.text_area :body %>
  </p>
  
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
